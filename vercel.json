{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/webhook/sheet-update", "dest": "/api/webhook.js" },
    { "src": "/socket.io/.*", "dest": "/api/socket-server.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
